snippet if
if ${1:/* condition */} {
	${2:${VISUAL}}
}
endsnippet
snippet ife "if else condition"
	if ${1:/* condition */} {
		${2:${VISUAL}}
	} else {
		${0}
	}
endsnippet
snippet el "else"
	else {
		${0:${VISUAL}}
	}
endsnippet
snippet ir "if error not nil, return err"
	if err != nil {
		return err
	}
	${0}
endsnippet
