function zle-line-init zle-keymap-select {
	RPS1="${${KEYMAP/Vicmd/ -- NORMAL — }/(main|viins)/ -- INSERT } "
	RPS2=$RPS1
	zle reset-prompt
}

zle -N zle-line-init
zle -N zle-keymap-select

antibody bundle zsh-users/zsh-autosuggestions

alias bastion='ssh cloud-user@$BASTION_IP'

